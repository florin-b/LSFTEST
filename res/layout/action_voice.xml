<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip" >

    
 <TextView
        android:id="@+id/numeModul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/istoricVoce"
        android:gravity="left"
        android:textColor="#00688B"
        android:textSize="15sp"
        android:typeface="serif" />    
    
    
    <TextView
        android:id="@+id/istoricVoce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="250dp"
        android:layout_toLeftOf="@+id/progressBarAction"
        android:gravity="right"
        android:text="Vorbiti..."
        android:textColor="#00688B"
        android:textSize="17sp"
        android:typeface="serif" />

    <ProgressBar
        android:id="@+id/progressBarAction"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@+id/imageButton"
        android:progressDrawable="@drawable/custom_progress_bar_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@null"
        android:src="@drawable/mic_off" />

</RelativeLayout>