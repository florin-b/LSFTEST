<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/spinnerCmd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="0.55"
            android:background="@drawable/spinner_style_2"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.05" />

        <Button
            android:id="@+id/creazaCmdSimBtn"
            style="@style/button_text_1"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/button_style_1"
            android:paddingLeft="40dip"
            android:paddingRight="40dip"
            android:text="Creeaza cmd." />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.05" />

        <Button
            android:id="@+id/stergeCmdSimBtn"
            style="@style/button_text_1"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/button_style_2"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="Sterge cmd." />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.05" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/listArtModif"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:choiceMode="singleChoice"
            android:dividerHeight="1.0sp"
            android:fastScrollAlwaysVisible="true"
            android:fastScrollEnabled="true"
            android:scrollbarStyle="outsideInset" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.40"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textJudetModif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/detColor1"
                android:textSize="17sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/textOrasModif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/detColor1"
                android:textSize="17sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/textAdrLivr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/detColor1"
                android:textSize="17sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/textPersContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/detColor1"
                android:textSize="17sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/textTelefon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/detColor1"
                android:textSize="17sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/textTipPlata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/detColor1"
                android:textSize="18sp"
                android:typeface="sans" />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/labelCantar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="1dip"
                    android:gravity="left"
                    android:text="Cantar"
                    android:textColor="@color/detColor1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textCantar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="25dip"
                    android:textColor="@color/detColor1"
                    android:textSize="18sp"
                    android:typeface="sans" />
            </LinearLayout>

            <TextView
                android:id="@+id/textTransport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/detColor1"
                android:textSize="18sp"
                android:typeface="sans" />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/labelFactRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="Fact. red. separat"
                    android:textColor="@color/detColor1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textFactRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="25dip"
                    android:text="-"
                    android:textColor="@color/detColor1"
                    android:textSize="18sp"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/labelTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:text="Total"
                    android:textColor="@color/detColor1"
                    android:textSize="18sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/textTotalCmd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_marginLeft="25dip"
                    android:text="0"
                    android:textColor="@color/detColor1"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>