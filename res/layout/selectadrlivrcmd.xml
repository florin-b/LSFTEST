<?xml version="1.0" encoding="utf-8"?>
<merge>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="45dip" />

                <RadioGroup
                    android:id="@+id/radioAdresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radioLista"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Selecteaza adresa din lista"
                        android:textColor="@color/detColor4"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/radioText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Introdu adresa noua"
                        android:textColor="@color/detColor4"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/radioObiectiv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adresa din obiectiv"
                        android:textColor="@color/detColor4"
                        android:textSize="16sp" />
                </RadioGroup>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layoutListAdrese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:text="Adresa livrare"
                    android:textColor="@color/detColor4"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnerAdreseLivrare"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|bottom"
                    android:layout_weight="0.25"
                    android:background="@drawable/dropdown_style_1"
                    android:gravity="left" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="45dip"
                    android:layout_weight="0.2" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layoutAdr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:text="Judet"
                    android:textColor="@color/detColor4"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnerJudet"
                    android:layout_width="0dp"
                    android:layout_height="45dip"
                    android:layout_gravity="bottom|left"
                    android:layout_weight="0.1"
                    android:background="@drawable/dropdown_style_1"
                    android:gravity="left" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="0.05"
                    android:gravity="left"
                    android:text="Localitate"
                    android:textColor="@color/detColor4"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnerLocalitate"
                    android:layout_width="0dp"
                    android:layout_height="45dip"
                    android:layout_gravity="bottom|left"
                    android:layout_weight="0.1"
                    android:background="@drawable/dropdown_style_1"
                    android:clickable="true"
                    android:gravity="left" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.21" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layoutAdr2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:text="Strada"
                    android:textColor="@color/detColor4"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtStrada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_weight="0.25"
                    android:background="@drawable/edittext_style_1"
                    android:gravity="left"
                    android:inputType="textNoSuggestions"
                    android:maxLength="65"
                    android:singleLine="true"
                    android:textColor="@color/editTextColor1"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:text="Pers. contact"
                    android:textColor="@color/detColor4"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtPersCont"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_weight="0.25"
                    android:background="@drawable/edittext_style_1"
                    android:drawableRight="@drawable/arrow_down"
                    android:gravity="left"
                    android:inputType="textNoSuggestions"
                    android:maxLength="65"
                    android:singleLine="true"
                    android:textColor="@color/editTextColor1"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:gravity="left|center"
                    android:paddingLeft="5dip"
                    android:text="Telefon"
                    android:textColor="@color/detColor4"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtTelefon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|left"
                    android:layout_weight="0.25"
                    android:background="@drawable/edittext_style_1"
                    android:gravity="left"
                    android:inputType="textNoSuggestions"
                    android:maxLength="65"
                    android:singleLine="true"
                    android:textColor="@color/editTextColor1"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="45dip"
                    android:layout_weight="0.2" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:paddingLeft="5dip"
                    android:text="Tip reducere"
                    android:textColor="@color/detColor4"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnerTipReducere"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|bottom"
                    android:layout_weight="0.25"
                    android:background="@drawable/dropdown_style_1"
                    android:gravity="left" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="45dip"
                    android:layout_weight="0.2" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:paddingLeft="5dip"
                    android:text="Document insotitor"
                    android:textColor="@color/detColor4"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnerDocInsot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|bottom"
                    android:layout_weight="0.25"
                    android:background="@drawable/dropdown_style_1"
                    android:gravity="left" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="45dip"
                    android:layout_weight="0.2" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:text="Plata"
                    android:textColor="@color/detColor4"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnerPlata"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|bottom"
                    android:layout_weight="0.1"
                    android:background="@drawable/dropdown_style_1"
                    android:gravity="left" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnerTermenPlata"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/dropdown_style_1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="45dip"
                    android:layout_weight="0.21" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:text="Resp. incasare"
                    android:textColor="@color/detColor4"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnerResponsabil"
                    android:layout_width="0dp"
                    android:layout_height="45dip"
                    android:layout_gravity="left|bottom"
                    android:layout_weight="0.25"
                    android:background="@drawable/dropdown_style_1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layoutValoareIncasare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:text="Valoare incasare"
                    android:textColor="@color/detColor4"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtValoareIncasare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_weight="0.1"
                    android:background="@drawable/edittext_style_1"
                    android:gravity="left"
                    android:inputType="numberDecimal"
                    android:maxLength="100"
                    android:singleLine="true"
                    android:textColor="@color/editTextColor1"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.07" />

                <CheckBox
                    android:id="@+id/checkboxModifValInc"
                    style="@style/checkbox_text_1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="0.08"
                    android:button="@drawable/checkbox_style_1"
                    android:text="Modifica" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:text="Transport"
                    android:textColor="@color/detColor4"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnerTransp"
                    android:layout_width="0dp"
                    android:layout_height="45dip"
                    android:layout_gravity="left|bottom"
                    android:layout_weight="0.1"
                    android:background="@drawable/dropdown_style_1"
                    android:gravity="left" />

                <CheckBox
                    android:id="@+id/checkMacara"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="0.15"
                    android:text="Camion cu macara" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.11" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:text="Data livrare"
                    android:textColor="@color/detColor4"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnerDataLivrare"
                    android:layout_width="0dp"
                    android:layout_height="45dip"
                    android:layout_gravity="left|bottom"
                    android:layout_weight="0.25"
                    android:background="@drawable/dropdown_style_1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:text="Obs. livrare"
                    android:textColor="@color/detColor4"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtObservatii"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_weight="0.25"
                    android:background="@drawable/edittext_style_1"
                    android:gravity="left"
                    android:inputType="textNoSuggestions"
                    android:maxLength="100"
                    android:singleLine="true"
                    android:textColor="@color/editTextColor1"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layoutObiective"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:text="Obiectiv"
                    android:textColor="@color/detColor4"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnerObiective"
                    android:layout_width="0dp"
                    android:layout_height="45dip"
                    android:layout_gravity="left|bottom"
                    android:layout_weight="0.25"
                    android:background="@drawable/dropdown_style_1"
                    android:gravity="left" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="80dip"
                    android:layout_weight="0.3" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</merge>