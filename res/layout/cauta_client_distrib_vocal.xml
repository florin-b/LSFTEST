<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutCautaClient"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="0.45"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/txtNumeClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:hint="Nume"
            android:inputType="textNoSuggestions"
            android:maxLength="30"
            android:singleLine="true"
            android:textColor="@color/editTextColor1"
            android:textSize="19sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/labelSelClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Selecteaza"
            android:textSize="19sp" />

        <ListView
            android:id="@+id/listResClienti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="0.55"
        android:orientation="vertical" >

        <Button
            android:id="@+id/cautaClientButton"
            style="@style/ok_button"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_gravity="left"
            android:background="@drawable/ok_button_style"
            android:paddingLeft="50dip"
            android:paddingRight="50dip"
            android:text="@string/strCauta" />

        <LinearLayout
            android:id="@+id/layoutDetClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_shape"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/dateLivrareDlLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/dateLivrareDlLabel"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:text="Nume client" />

                <TextView
                    android:id="@+id/textNumeClient"
                    style="@style/dateLivrareDlValori"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4" />
            </LinearLayout>

            <LinearLayout
                style="@style/dateLivrareDlLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/dateLivrareDlLabel"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:text="Cod client" />

                <TextView
                    android:id="@+id/textCodClient"
                    style="@style/dateLivrareDlValori"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4" />
            </LinearLayout>

            <LinearLayout
                style="@style/dateLivrareDlLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/dateLivrareDlLabel"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:text="Adresa" />

                <TextView
                    android:id="@+id/textAdrClient"
                    style="@style/dateLivrareDlValori"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4" />
            </LinearLayout>

            <LinearLayout
                style="@style/dateLivrareDlLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/dateLivrareDlLabel"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:text="Limita credit" />

                <TextView
                    android:id="@+id/textLimitaCredit"
                    style="@style/dateLivrareDlValori"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4" />
            </LinearLayout>

            <LinearLayout
                style="@style/dateLivrareDlLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/dateLivrareDlLabel"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:text="Rest credit" />

                <TextView
                    android:id="@+id/textRestCredit"
                    style="@style/dateLivrareDlValori"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4" />
            </LinearLayout>

            <LinearLayout
                style="@style/dateLivrareDlLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/dateLivrareDlLabel"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:text="Tip client" />

                <TextView
                    android:id="@+id/tipClient"
                    style="@style/dateLivrareDlValori"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4" />
            </LinearLayout>

            <LinearLayout
                style="@style/dateLivrareDlLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/dateLivrareDlLabel"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:text="Stare" />

                <TextView
                    android:id="@+id/clientBlocat"
                    style="@style/dateLivrareDlValori"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4" />
            </LinearLayout>

            <LinearLayout
                style="@style/dateLivrareDlLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp" >

                <TextView
                    style="@style/dateLivrareDlLabel"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:text="Filiala" />

                <TextView
                    android:id="@+id/textFilialaClient"
                    style="@style/dateLivrareDlValori"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/salveazaClientButton"
            style="@style/ok_button"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_gravity="right"
            android:background="@drawable/ok_button_style"
            android:paddingLeft="50dip"
            android:paddingRight="50dip"
            android:text="@string/strSalveaza" />
    </LinearLayout>

</LinearLayout>