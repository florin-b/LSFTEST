<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.02" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.9"
            android:gravity="left"
            android:text="Tip client"
            android:textColor="#A2B5CD"
            android:textSize="16sp"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.02" />

        <RadioGroup
            android:id="@+id/radioTipCl"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.9"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioClDistrib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dip"
                android:checked="true"
                android:text="Client distributie"
                android:textColor="@color/detColor4"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <RadioButton
                android:id="@+id/radioClPF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PF - persoana fizica"
                android:textColor="@color/detColor4"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <RadioButton
                android:id="@+id/radioClPJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:text="PJ - persoana juridica"
                android:textColor="@color/detColor4"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <RadioButton
                android:id="@+id/radioClMeserias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:text="Meseriasi - PFA"
                android:textColor="@color/detColor4"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </RadioGroup>
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/client_ged_persoana" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/client_ged_distrib" />

</LinearLayout>