<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.5"
        android:orientation="vertical" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:orientation="horizontal" >

            <ToggleButton
                android:id="@+id/tglTipArt"
                style="@style/button_text_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|bottom"
                android:layout_weight="0.07"
                android:background="@drawable/button_style_5"
                android:textOff="Articol"
                android:textOn="Sintetic" />

            <ToggleButton
                android:id="@+id/togglebutton"
                style="@style/button_text_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="10dip"
                android:layout_weight="0.07"
                android:background="@drawable/button_style_5"
                android:textOff="Nume"
                android:textOn="Cod" />

            <EditText
                android:id="@+id/txtNumeArt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="10dip"
                android:layout_weight="0.2"
                android:background="@drawable/edittext_style_1"
                android:inputType="textNoSuggestions"
                android:maxLength="30"
                android:singleLine="true"
                android:textColor="@color/editTextColor1"
                android:typeface="monospace" />

            <Button
                android:id="@+id/articoleBtn"
                style="@style/button_text_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dip"
                android:layout_weight="0.07"
                android:background="@drawable/button_style_1"
                android:text="@string/strCauta" />
        </LinearLayout>

        <ListView
            android:id="@+id/listArticole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="20dip"
            android:choiceMode="singleChoice"
            android:dividerHeight="1.0sp"
            android:drawSelectorOnTop="false" />
    </LinearLayout>

    <View
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.02" >
    </View>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="0.4"
        android:orientation="vertical" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Spinner
                android:id="@+id/spinnerCompetition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_weight="0.05"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinnerArtTypeList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="20dip"
                android:layout_weight="0.04"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/artDetLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dip"
            android:orientation="vertical" >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textNumeArticolSel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@color/detColor1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/textCodArticolSel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@color/detColor1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/labelPret"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:text="Adauga pret"
                    android:textColor="@color/detColor1"
                    android:textSize="16sp"
                    android:typeface="sans" />

                <EditText
                    android:id="@+id/editPretArt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:layout_weight="0.03"
                    android:inputType="numberDecimal"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textColor="@color/editTextColor1"
                    android:textSize="18sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/labelUM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="10dip"
                    android:textColor="@color/detColor1"
                    android:textSize="17sp"
                    android:typeface="sans" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.01" >
                </View>

                <Button
                    android:id="@+id/addPretBtn"
                    style="@style/ok_button"
                    android:layout_width="wrap_content"
                    android:layout_height="45dip"
                    android:layout_gravity="right|center"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/ok_button_style"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:text="@string/salveaza" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.01" >
                </View>
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/artDetLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginTop="30dip"
                android:orientation="horizontal" >

                <ListView
                    android:id="@+id/listIstoricPret"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dip"
                    android:choiceMode="singleChoice"
                    android:dividerHeight="1.0sp"
                    android:drawSelectorOnTop="false" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>